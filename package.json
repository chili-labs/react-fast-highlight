{
  "name": "react-fast-highlight",
  "version": "4.0.0",
  "description": "A fast react component wrapper for highlight.js",
  "main": "lib/js/index.js",
  "module": "lib/esm/index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "build": "run-p build:*",
    "build:commonjs": "cross-env BABEL_ENV=production BABEL_OUTPUT=cjs babel src --out-dir lib/js --extensions .ts,.tsx --ignore '**/__tests__'",
    "build:esm": "cross-env BABEL_ENV=production BABEL_OUTPUT=esm babel src --out-dir lib/esm --extensions .ts,.tsx --ignore '**/__tests__'",
    "build:types": "tsc",
    "create-github-release": "conventional-github-releaser -p angular",
    "format": "spire format",
    "lint": "spire lint",
    "prepare": "run-s clean build",
    "prerelease": "run-s lint test",
    "release": "spire release",
    "test": "spire test",
    "test:coverage": "spire test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/researchgate/react-fast-highlight.git"
  },
  "files": [
    "lib",
    "typings"
  ],
  "keywords": [
    "react",
    "component",
    "highlight",
    "syntax",
    "highlightjs"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/react-fast-highlight/issues"
  },
  "homepage": "https://github.com/researchgate/react-fast-highlight#readme",
  "peerDependencies": {
    "highlight.js": "^9.0.0 || ^10.0.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.6",
    "@babel/preset-typescript": "7.9.0",
    "@researchgate/babel-preset": "2.0.0",
    "@researchgate/spire-config": "4.0.1",
    "@types/classnames": "2.2.10",
    "@types/prop-types": "15.7.3",
    "@types/react": "16.9.34",
    "cross-env": "7.0.2",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "3.4.4",
    "highlight.js": "10.0.2",
    "jest-snapshot": "26.0.1",
    "npm-run-all": "4.1.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rimraf": "3.0.2",
    "spire": "2.1.0",
    "spire-plugin-semantic-release": "2.1.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@types/highlight.js": "^9.12.3",
    "classnames": "^2.2.3",
    "prop-types": "^15.5.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/__tests__/**/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup-jest.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "spire": {
    "extends": [
      [
        "@researchgate/spire-config",
        {
          "eslint": "react-typescript"
        }
      ]
    ],
    "plugins": [
      "spire-plugin-semantic-release"
    ]
  },
  "prettier": "@researchgate/prettier-config"
}
