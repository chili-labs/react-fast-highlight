{
  "name": "react-fast-highlight",
  "version": "2.2.2",
  "description": "A fast react component wrapper for highlight.js",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "run-p build:*",
    "build:commonjs": "cross-env BABEL_ENV=production BABEL_OUTPUT=cjs babel src --out-dir lib --ignore '**/__tests__'",
    "build:esm": "cross-env BABEL_ENV=production BABEL_OUTPUT=esm babel src --out-dir esm --ignore '**/__tests__'",
    "create-github-release": "conventional-github-releaser -p angular",
    "flow": "flow",
    "format": "spire format",
    "lint": "spire lint",
    "prepare": "run-s clean build",
    "prerelease": "run-s lint flow test",
    "release": "standard-version",
    "test": "spire test",
    "test:coverage": "yarn test --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/researchgate/react-fast-highlight.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "component",
    "highlight",
    "syntax",
    "highlightjs"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/react-fast-highlight/issues"
  },
  "homepage": "https://github.com/researchgate/react-fast-highlight#readme",
  "peerDependencies": {
    "react": "^15.3.0 || ^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "@researchgate/babel-preset": "^1.2.1",
    "@researchgate/spire-config": "^1.3.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "conventional-github-releaser": "^3.1.3",
    "cross-env": "^5.0.5",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.105.2",
    "jest": "^24.9.0",
    "jest-snapshot": "^24.9.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^3.0.0",
    "spire": "^1.7.2",
    "standard-version": "^7.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "highlight.js": "^9.0.0",
    "prop-types": "^15.5.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "text",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup-jest.js"
    ],
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "spire": {
    "extends": "@researchgate/spire-config"
  }
}
