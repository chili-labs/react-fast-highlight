{
  "name": "react-fast-highlight",
  "version": "2.1.1",
  "description": "A fast react component wrapper for highlight.js",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "run-p build:*",
    "build:commonjs": "cross-env BABEL_ENV=production BABEL_OUTPUT=cjs babel src --out-dir lib --ignore __tests__",
    "build:esm": "cross-env BABEL_ENV=production BABEL_OUTPUT=esm babel src --out-dir esm --ignore __tests__",
    "flow": "flow",
    "format": "eslint --fix src test",
    "lint": "eslint src",
    "prepublish": "yarn run clean && yarn run build",
    "preversion": "yarn test",
    "test": "yarn run lint && yarn run flow && yarn run test-only",
    "test-only": "jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/researchgate/react-fast-highlight.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "component",
    "highlight",
    "syntax",
    "highlightjs"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/react-fast-highlight/issues"
  },
  "homepage": "https://github.com/researchgate/react-fast-highlight#readme",
  "peerDependencies": {
    "react": "^15.3.0 || ^16.0.0"
  },
  "devDependencies": {
    "@researchgate/babel-preset-rg": "^2.0.0-beta.0",
    "@researchgate/eslint-config-rg-react": "^1.0.1",
    "babel-cli": "^7.0.0-beta.2",
    "babel-core": "^7.0.0-beta.2",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.3.0-beta.1",
    "cross-env": "^5.0.5",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.56.0",
    "jest": "^21.3.0-beta.1",
    "jest-snapshot": "^21.3.0-beta.1",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.5.0"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "highlight.js": "^9.0.0",
    "prop-types": "^15.5.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "text",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup-jest.js",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
