{
  "name": "react-fast-highlight",
  "version": "2.1.1",
  "description": "A fast react component wrapper for highlight.js",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib",
    "flow": "flow",
    "lint": "eslint src",
    "prepublish": "yarn run clean && yarn run build",
    "preversion": "yarn test",
    "test": "yarn run lint && yarn run flow && yarn run test-only",
    "test-only": "jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/researchgate/react-fast-highlight.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "component",
    "highlight",
    "syntax",
    "highlightjs"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/react-fast-highlight/issues"
  },
  "homepage": "https://github.com/researchgate/react-fast-highlight#readme",
  "peerDependencies": {
    "react": "^15.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.11.1",
    "cross-env": "^5.0.0",
    "enzyme": "^2.2.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.52.0",
    "jest": "^20.0.4",
    "jest-snapshot": "^20.0.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.5.0"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "highlight.js": "^9.0.0",
    "prop-types": "^15.5.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "text",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup-jest.js",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
