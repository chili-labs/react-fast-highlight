{
  "name": "react-fast-highlight",
  "version": "2.0.0",
  "description": "A fast react component wrapper for highlight.js",
  "main": "lib/index.js",
  "scripts": {
    "check": "npm run lint && npm run flow && npm test",
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib",
    "flow": "flow",
    "lint": "eslint src",
    "precommit": "npm run check",
    "prepublish": "npm run clean && npm run build",
    "preversion": "npm run check",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chili-labs/react-fast-highlight.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "component",
    "highlight",
    "syntax",
    "highlightjs"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chili-labs/react-fast-highlight/issues"
  },
  "homepage": "https://github.com/chili-labs/react-fast-highlight#readme",
  "peerDependencies": {
    "react": "^15.3.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.14.0",
    "enzyme": "^2.2.0",
    "eslint": "^3.0.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.6.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "flow-bin": "^0.34.0",
    "husky": "^0.11.1",
    "jsdom": "^9.1.0",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "rimraf": "^2.5.0",
    "testdouble": "^1.6.0"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "highlight.js": "^9.0.0"
  },
  "ava": {
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  }
}
